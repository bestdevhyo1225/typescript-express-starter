{
  "name": "typescript-express-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --detectOpenHandles --coverage --verbose"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.11",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.15",
    "@types/node": "^12.7.2",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "chai": "^4.2.0",
    "jest": "^24.9.0",
    "morgan": "^1.9.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.3"
  }
